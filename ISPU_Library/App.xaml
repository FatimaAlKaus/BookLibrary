<Application x:Class="ISPU_Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vml ="clr-namespace:Application.ViewModels.VML;assembly=Application"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters ="clr-namespace:Application.Converters;assembly=Application"
             StartupUri="Views/MainWindow.xaml"
             xmlns:local="clr-namespace:ISPU_Library">
    <Application.Resources>
        <ResourceDictionary>
            <converters:DateTimeToDateConverter x:Key="DateTimeToDateConverter"/>
            <vml:ViewModelLocator x:Key="VML"/>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="BlueGrey" SecondaryColor="Orange"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
